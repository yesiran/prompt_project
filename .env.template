# 环境配置模板文件
# 复制此文件为 .env 并填写实际配置值

# ============== 环境设置 ==============
# 环境标识: development / production
ENV=development

# Flask配置
FLASK_APP=run.py
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# ============== 数据库配置 ==============
# MySQL数据库连接配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=prompt_db
DB_CHARSET=utf8mb4

# 数据库连接池配置
DB_POOL_SIZE=5
DB_POOL_RECYCLE=3600
DB_POOL_TIMEOUT=30
DB_MAX_OVERFLOW=10

# ============== 日志配置 ==============
# 日志级别: DEBUG / INFO / WARNING / ERROR / CRITICAL
LOG_LEVEL=DEBUG
# 日志文件路径（相对于项目根目录）
LOG_DIR=logs
# 日志文件最大大小（MB）
LOG_MAX_SIZE=100
# 日志文件保留天数
LOG_RETENTION_DAYS=30

# ============== 服务器配置 ==============
# 应用运行配置
APP_HOST=0.0.0.0
APP_PORT=5000
# 工作进程数（生产环境建议设置为CPU核心数的2-4倍）
WORKERS=1

# ============== API密钥配置 ==============
# OpenAI API配置
OPENAI_API_KEY=
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# Claude API配置
CLAUDE_API_KEY=
CLAUDE_API_BASE=https://api.anthropic.com
CLAUDE_MODEL=claude-3

# 文心一言API配置
WENXIN_API_KEY=
WENXIN_SECRET_KEY=
WENXIN_API_BASE=https://aip.baidubce.com

# ============== 缓存配置 ==============
# Redis缓存配置（可选）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TIMEOUT=300

# ============== 安全配置 ==============
# CORS配置
CORS_ORIGINS=http://localhost:3000,http://localhost:5000
# Session配置
SESSION_TIMEOUT=3600
# 请求限制
RATE_LIMIT_PER_MINUTE=60

# ============== 其他配置 ==============
# 时区设置
TIMEZONE=Asia/Shanghai
# 分页配置
PAGE_SIZE=20
# 文件上传限制（MB）
MAX_UPLOAD_SIZE=10